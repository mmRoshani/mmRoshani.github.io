---
import { siteConfig } from '@/data/site.config'
import TelegramColorIcon from './icons/TelegramColorIcon.astro'
import LinkedinIcon from './icons/linkedinColorIcon.astro'

const message = encodeURIComponent(siteConfig.shareMessage.replace(/\n/g, '\n'))

const URL = Astro.url.href
---

<div class='flex flex-col gap-2'>
	<span class='mb-1 font-bold text-2xl'>Share</span>
	<ul class='flex gap-1 text-black dark:text-white'>
		<li>
			<a href={`https://t.me/share/url?url=${URL}&text=${message}`} aria-label='Share on Telegram'
				><TelegramColorIcon /></a
			>
		</li>

		<li>
			<a
				href={`https://www.linkedin.com/shareArticle?mini=true&url=${URL}`}
				aria-label='Share on LinkedIn'
			>
				<LinkedinIcon /></a
			>
		</li>
	</ul>
</div>
